<div class="container">
  <h1>Welcome to Yelp</h1>

  <ul>
      <% @restaurants.each do |restaurant| %>
    <li>
      <%= restaurant.name %> -
      <%= restaurant.category %>
      <%= link_to "See details", restaurant_path(restaurant) %>
    </li>
      <% end  %>
  </ul>

<%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary"  %>

</div>
