<div class="container">
  <h1><%= @restaurant.name %></h1>
  <hr>
  <p> Address: <%=@restaurant.address %> </p>
  <p>Phone: <%= @restaurant.phone_number %> </p>
  <p> Category: <%= @restaurant.category %></p>

  <ul >

    <% @restaurant.reviews.each do |r| %>
    <li>
      Review: <%= r.content %>,
      Rating: <%= r.rating %>
    </li>
    <% end  %>

  </ul>

<%= render 'reviews/form', restaurant: @restaurant, review: Review.new %>


  <hr>
  <p> <%= link_to "Back Home",  restaurants_path, class: "btn btn-primary" %> </p>
</div>
